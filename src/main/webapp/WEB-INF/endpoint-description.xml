<?xml version="1.0" encoding="UTF-8"?>
<EndpointDescription
	xmlns="http://clarin.eu/fcs/endpoint-description"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://clarin.eu/fcs/endpoint-description ../../schema/Core_2/Endpoint-Description.xsd"
	version="2">
	<Capabilities>
		<Capability>http://clarin.eu/fcs/capability/basic-search</Capability>
		<Capability>http://clarin.eu/fcs/capability/advanced-search</Capability>
	</Capabilities>
	<SupportedDataViews>
		<SupportedDataView id="hits"
			delivery-policy="send-by-default">application/x-clarin-fcs-hits+xml</SupportedDataView>
		<SupportedDataView id="adv"
			delivery-policy="send-by-default">application/x-clarin-fcs-adv+xml</SupportedDataView>
		<SupportedDataView id="cmdi"
			delivery-policy="need-to-request">application/x-cmdi+xml</SupportedDataView>
	</SupportedDataViews>
	<SupportedLayers>
		<SupportedLayer id="word"
			result-id="http://spraakbanken.gu.se/ns/fcs/layer/word">text</SupportedLayer>
		<SupportedLayer id="lemma"
			result-id="http://spraakbanken.gu.se/ns/fcs/layer/lemma">lemma</SupportedLayer>
		<SupportedLayer id="pos"
			result-id="http://spraakbanken.gu.se/ns/fcs/layer/pos">pos</SupportedLayer>
	</SupportedLayers>

	<Resources>

		<Resource pid="opensonar">
			<Title xml:lang="nl">OpenSoNaR</Title>
			<Title xml:lang="en">OpenSoNaR</Title>
			<Description xml:lang="nl">Het OpenSonar-corpus van het INT.</Description>
			<Description xml:lang="en">The OpenSoNaR corpus at INT.</Description>
			<LandingPageURI>http://opensonar.ato.inl.nl/</LandingPageURI>
			<Languages>
				<Language>nld</Language>
			</Languages>
			<AvailableDataViews ref="hits adv" />
			<AvailableLayers ref="word lemma pos" />
		</Resource>

		<Resource pid="chn">
			<Title xml:lang="nl">Corpus Hedendaags Nederlands</Title>
			<Title xml:lang="en">Corpus of Contemporary Dutch</Title>
			<Description xml:lang="nl">Het Corpus Hedendaags Nederlands van het INT.</Description>
			<Description xml:lang="en">The Corpus of Contemporary Dutch.</Description>
			<LandingPageURI>http://corpushedendaagsnederlands.inl.nl/</LandingPageURI>
			<Languages>
				<Language>nld</Language>
			</Languages>
			<AvailableDataViews ref="hits adv" />
			<AvailableLayers ref="word lemma pos" />
		</Resource>

		<Resource pid="zeebrieven">
			<Title xml:lang="nl">Brieven als Buit</Title>
			<Title xml:lang="en">Letters as Loot</Title>
			<Description xml:lang="nl">Het Brieven als Buit-corpus van het INT.
			17e- en 18e-eeuwse Nederlandse brieven geschreven door of aan zeelieden.</Description>
			<Description xml:lang="en">The Letters as Loot corpus at
				INT. 17th and 18th century Dutch letters written by, or
				addressed to sailors.</Description>
			<LandingPageURI>http://brievenalsbuit.inl.nl/</LandingPageURI>
			<Languages>
				<Language>nld</Language>
			</Languages>
			<AvailableDataViews ref="hits adv" />
			<AvailableLayers ref="word lemma pos" />
		</Resource>

		<Resource pid="gysseling">
			<Title xml:lang="nl">Corpus Gysseling</Title>
			<Title xml:lang="en">Corpus Gysseling</Title>
			<Description xml:lang="nl">Corpus Gysseling van het INT. 13e-eeuwse Nederlandse documenten.</Description>
			<Description xml:lang="en">Corpus Gysseling at INT.
				13th century Dutch documents</Description>
			<LandingPageURI>http://gysseling.corpus.taalbanknederlands.inl.nl/</LandingPageURI>
			<Languages>
				<Language>nld</Language>
			</Languages>
			<AvailableDataViews ref="hits adv" />
			<AvailableLayers ref="word lemma pos" />
		</Resource>
		
		<Resource pid="StatenGeneraal">
			<Title xml:lang="nl">Staten Generaal</Title>
			<Title xml:lang="en">Staten Generaal</Title>
			<Description xml:lang="nl">Het Staten Generaal-corpus van het INT. 13e-eeuwse Nederlandse documenten</Description>
			<Description xml:lang="en">The Staten Generaal corpus at
				INT. 13th century Dutch documents</Description>
			<LandingPageURI>http://gysseling.corpus.taalbanknederlands.inl.nl/</LandingPageURI>
			<Languages>
				<Language>nld</Language>
			</Languages>
			<AvailableDataViews ref="hits adv" />
			<AvailableLayers ref="word lemma pos" />
		</Resource>

		<Resource pid="nederlab">
			<Title xml:lang="nl">Nederlab (Meertens Instituut)</Title>
			<Title xml:lang="en">Nederlab (Meertens Institute)</Title>
			<Description xml:lang="nl">Diachroon corpus van het Nederlands.</Description>
			<Description xml:lang="en">Diachronic Dutch corpus.</Description>
			<LandingPageURI>http://www.nederlab.nl/onderzoeksportaal/</LandingPageURI>
			<Languages>
				<Language>nld</Language>
			</Languages>
			<AvailableDataViews ref="hits adv" />
			<AvailableLayers ref="word lemma pos" />
		</Resource>
	</Resources>
</EndpointDescription>
